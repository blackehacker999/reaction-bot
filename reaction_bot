    """
    print(banner)
    print("ðŸš€ Telegram Bot Started...\n")

# ========== SEND TEST MESSAGE ==========
def send_test_message():
    """Send a test message to verify the bot connection."""
    message = "ðŸš€ Bot is successfully connected to the channel!"
    bot.send_message(CHAT_ID, message)
    print(f"âœ… Message sent to {CHAT_ID}: {message}")

# ========== MAIN ==========
if __name__ == "__main__":
    show_banner()
    send_test_message()
